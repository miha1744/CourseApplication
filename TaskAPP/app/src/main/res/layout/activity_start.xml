<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundsign"
    tools:context=".Start">

    <ImageView
        android:id="@+id/logo"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/category_name_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <android.support.v7.widget.CardView
        app:cardElevation="4dp"
        android:id="@+id/but"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:id="@+id/btn_play"
            android:layout_margin="8dp"
            android:background="@drawable/my_button_bg"
            android:foreground="?android:selectableItemBackground"
            android:text="Начать тестирование"

            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:theme="@style/MyButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        app:cardElevation="4dp"
        android:layout_marginVertical="8dp"
        android:layout_below="@+id/but"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UnknownId">

        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:id="@+id/btn_return_to_main"
            android:layout_margin="8dp"
            android:background="@drawable/my_button_bg"
            android:foreground="?android:selectableItemBackground"
            android:text="Вернуться в главное меню"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:theme="@style/MyButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </android.support.v7.widget.CardView>

</RelativeLayout>